<%- include('../partials/header.ejs') %>  

<div style="width: 70%; margin: 40px auto; text-align: center;margin-bottom: 80px;">
  <h2 style="margin-bottom: 80px;">Edit Your Review</h2>
 <form action="/reviews/<%= review.id %>/edit?bookId=<%= book.key.replace('/works/', '') %>" method="POST" style="max-width: 600px; margin: 40px auto; padding: 20px; border: 1px solid">
    <textarea name="thoughts" style="width: 100%; height: 100px; padding: 10px; font-size: 18px; border: 1px solid #ccc; border-radius: 10px; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); margin-bottom: 20px;"><%= review.review_text %></textarea>
    <select name="rating" style="width: 100%; height: 40px; padding: 10px; font-size: 18px; border: 1px solid #ccc; border-radius: 10px; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); margin-bottom: 20px;">
      <option value="1" <% if (review.rating === 1) { %>selected<% } %>>1 star</option>
      <option value="2" <% if (review.rating === 2) { %>selected<% } %>>2 stars</option>
      <option value="3" <% if (review.rating === 3) { %>selected<% } %>>3 stars</option>
      <option value="4" <% if (review.rating === 4) { %>selected<% } %>>4 stars</option>
      <option value="5" <% if (review.rating === 5) { %>selected<% } %>>5 stars</option>
    </select>
    <button style="padding: 10px 20px; font-size: 18px; border: none; border-radius: 10px; background-color: #4CAF50; color: #fff; cursor: pointer;">Save Changes</button>
  </form>
</div>

<%- include('../partials/footer.ejs') %>