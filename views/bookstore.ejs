<%- include('../partials/header') %> 

<form action="/bookstore" method="GET"> 
  <div class="hero"> 
    <header style="display: flex; align-items: center; justify-content: space-around;"> 
      <h2 style="margin-right: 20px;">ReadOnRepeat</h2> 
      <div class="search-column" style="position: relative; display: flex; align-items: center;"> 
        <input type="text" id="search" name="q" placeholder="Search" style="padding-left: 30px;"> 
        <i class="fas fa-search search-icon" style="position: absolute; left: 10px;"></i> 
        <button type="submit" style="display: none;"></button> 
      </div> 
    </header> 
  </div> 
</form> 
<div id="book-list" style="display: flex; flex-wrap: wrap; gap: 20px; margin-top: 100px; justify-content: center;">
  <% books.forEach(book => { %>
    <a href="/book/<%= book.key.split('/').pop() %>" style="text-decoration: none; color: inherit; width: calc(25% - 15px); 
    min-width: 200px; flex-grow: 1;">
      <div style="text-align: center;">
        <% if (book.cover_i) { %>
          <img src="http://covers.openlibrary.org/b/id/<%= book.cover_i %>-M.jpg" />
        <% } %>
      <h3 style="font-size: 1em; margin-top: 10px;"><%= book.title %></h3> 
      <p style="font-size: 0.8em;">Author: <%= book.author_name && book.author_name[0] %></p> 
    </div> 
  <% }); %> 
</div>

<style>
  @media only screen and (max-width: 768px) {
    #book-list {
      flex-direction: column;
      text-align: center;
      align-items: center;
      justify-content: center;
      margin-top: 0;
    }
    #book-list .book-item img {
      width: 10px;
      object-fit: cover;
      border-radius: 5px;
      margin-top: 5px;
    }
    #book-list .book-item:nth-child(n+6) {
      display: none;
    }
    #book-list .book-item {
      width: 100%;
      margin-bottom: 5px;
    }
    .search-column {
      width: 100%;
      padding: 20px;
      align-items: center;
      justify-content: center;
      text-align: center;
    }
    .search-icon {
       display: none;
    }
    .hero header h2 {
      display: none;
    }
    body {
    background-size: 100% 100%;
  }
  }
</style>

<%- include('../partials/footer') %>